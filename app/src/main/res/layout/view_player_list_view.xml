<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		android:id="@+id/rlPlayerList"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="430dp"
		android:background="#668a9cd7"
		android:visibility="invisible">

	<TextView
			android:id="@+id/tvPlayerListTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_marginTop="15dp"
			android:text="@string/current_list"
			android:textSize="20sp"
			android:textColor="#FFFFFF"/>

	<ListView
			android:id="@+id/lvPlayerList"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/tvPlayerListTitle"
			android:layout_marginTop="10dp"
			android:divider="@null"
			android:listSelector="#4effffff">

	</ListView>

</RelativeLayout>
