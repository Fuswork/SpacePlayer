<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent">


	<ImageView
			android:id="@+id/main_lyric_iv_icon"
			android:layout_alignParentEnd="true"
			android:layout_width="64dp"
			android:layout_height="64dp"
			android:src="@drawable/default_music_img"
			android:contentDescription="@string/hello"/>

	<TextView
			android:id="@+id/main_lyric_tv_musicName"
			android:layout_toStartOf="@id/main_lyric_iv_icon"
			android:layout_alignParentStart="true"
			android:layout_marginStart="15dp"
			android:layout_width="wrap_content"
			android:layout_height="32dp"
			android:gravity="center_vertical"

			android:singleLine="true"
			android:ellipsize="marquee"
			android:marqueeRepeatLimit="marquee_forever"
			android:text="@string/loading"/>

	<TextView
			android:id="@+id/main_lyric_tv_musicArtist"
			android:layout_toStartOf="@id/main_lyric_iv_icon"
			android:layout_alignParentStart="true"
			android:layout_marginEnd="15dp"
			android:layout_below="@id/main_lyric_tv_musicName"
			android:layout_width="wrap_content"
			android:layout_height="32dp"
			android:gravity="center_vertical|end"

			android:singleLine="true"
			android:ellipsize="marquee"
			android:marqueeRepeatLimit="marquee_forever"
			android:text="@string/loading"/>

</RelativeLayout>