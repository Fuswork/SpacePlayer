<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
								android:layout_width="match_parent"
								android:layout_height="64dp"
								android:padding="2dp">

	<ImageView
			android:id="@+id/icon"
			android:layout_width="60dp"
			android:layout_height="60dp"/>

	<TextView
			android:id="@+id/music_name"
			android:layout_toRightOf="@id/icon"
			android:layout_toEndOf="@id/icon"
			android:layout_marginTop="2dp"
			android:layout_width="wrap_content"
			android:layout_height="30dp"

			android:textSize="12sp"
			android:gravity="center"
			android:text="歌曲名"/>

	<TextView
			android:id="@+id/music_artist"
			android:layout_alignLeft="@+id/music_name"
			android:layout_alignStart="@id/music_name"
			android:layout_below="@id/music_name"
			android:layout_width="wrap_content"
			android:layout_height="20dp"
			android:text="歌手名"/>

	<TextView
			android:id="@+id/music_album"
			android:layout_toRightOf="@id/music_artist"
			android:layout_toEndOf="@id/music_artist"
			android:layout_alignTop="@id/music_artist"
			android:layout_width="wrap_content"
			android:layout_height="20dp"
			android:text="专辑名"/>


	<ImageButton
			android:id="@+id/button_quit"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:layout_centerInParent="true"
			android:layout_width="wrap_content"
			android:layout_height="40dp"/>

	<ImageButton
			android:id="@+id/button_next"
			android:layout_toLeftOf="@id/button_quit"
			android:layout_toStartOf="@id/button_quit"
			android:layout_centerInParent="true"
			android:layout_width="wrap_content"
			android:layout_height="40dp"/>

	<ImageButton
			android:id="@+id/button_pause"
			android:layout_toLeftOf="@id/button_next"
			android:layout_toStartOf="@id/button_next"
			android:layout_centerInParent="true"
			android:layout_width="wrap_content"
			android:layout_height="40dp"/>

</RelativeLayout>